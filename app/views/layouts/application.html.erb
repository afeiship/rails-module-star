<!DOCTYPE html>
<html>
  <head>
    <title>RailsModuleStar</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_pack_tag "application", 'data-turbolinks-track': "reload" %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notice docify-flash is-success">
        <%= flash[:notice] %>
        <i class="iconfont icon-close"></i>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
