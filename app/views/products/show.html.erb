<p>
    <strong>Products:</strong>
    <span><%= @item.inspect %></span>
</p>

<footer class="actions">
    <%= link_to "收藏", collect_products_path(@item), method: :post, remote: true, data: { confirm: "确定收藏?" } %>
    <%= link_to "取消收藏", uncollect_products_path(@item), method: :post, remote: true, data: { confirm: "取消收藏?" } %>
</footer>